<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/fullname"
        android:key="name"
        android:inputType="text"/>
    <ListPreference
        android:title="@string/sexe"
        android:summary="%s"
        android:entries="@array/sexe"
        android:entryValues="@array/sexevalues"
        android:key="sexe"/>
    <EditTextPreference
        android:title="@string/height"
        android:key="height"
        android:inputType="number"
        android:maxLength="3" />
    <EditTextPreference
        android:title="@string/weight"
        android:key="weight"
        android:inputType="number"
        android:maxLength="3" />


</PreferenceScreen>